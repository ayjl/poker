div.fixed
  nav.top-bar(role='navigation', data-topbar)
    ul.title-area
      li.name
        h1
          a(href='/') &nbsp;
            div.title-brand
      li.toggle-topbar.menu-icon
        a(href='#')
          span Menu
    section.top-bar-section
      ul.left
        li: a(href='/tables') Tables
        li: a(href='/users') Users
      ul.right
        li
          a(href='/account') #{user.username}: 
            span#Chips $#{user.chips}
            if incomingFriendReq > 0
              span.label.friend-notification #{incomingFriendReq}
        if loggedIn
          li: a(href='/logout') Log out
        else
          li: a(href='/') Log in