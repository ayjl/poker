div.fixed
  nav.top-bar(role='navigation', data-topbar)
    ul.title-area
      li.name
        h1
          a(href='/') Poker
      li.toggle-topbar.menu-icon
        a(href='#')
          span Menu
    section.top-bar-section
      ul.right
        li
          if user
            a(href='/account') #{user.username}: 
              span#Chips $#{user.chips}
          else
            a(href='/account') #{session.user.username}: 
              span#Chips $#{session.user.chips}
        li: a(href='/tables') Tables
        li: a(href='/') Settings
        li: a(href='/logout') Log out
